# ==========================================
# Docsmait Environment Configuration
# ==========================================
# Copy this file to .env and update the values as needed
# All configuration values can be overridden using environment variables

# ==========================================
# Environment Settings
# ==========================================
DOCSMAIT_ENV=development  # Options: development, docker, testing, production

# ==========================================
# Database Configuration
# ==========================================
DB_USER=docsmait_user
DB_PASSWORD=docsmait_password
DB_HOST=docsmait_postgres  # Use "localhost" for development
DB_PORT=5432               # Use "5433" for external access during development
DB_NAME=docsmait

# Constructed URL (optional - will be built from components above)
DATABASE_URL=postgresql://docsmait_user:docsmait_password@docsmait_postgres:5432/docsmait

# ==========================================
# Service Configuration
# ==========================================
BACKEND_SERVICE_NAME=docsmait_backend
FRONTEND_SERVICE_NAME=docsmait_frontend
POSTGRES_SERVICE_NAME=docsmait_postgres
QDRANT_SERVICE_NAME=docsmait_qdrant
OLLAMA_SERVICE_NAME=ollama

# ==========================================
# Network Configuration
# ==========================================
# Host configuration for different environments
BACKEND_HOST=backend  # Use "localhost" for development
FRONTEND_HOST=frontend  # Use "localhost" for development
QDRANT_HOST=qdrant  # Use "localhost" for development
OLLAMA_HOST=ollama  # Use "localhost" for development

# === Authentication Configuration ===
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === AI/LLM Configuration ===
GENERAL_PURPOSE_LLM=qwen2:7b
EMBEDDING_MODEL=nomic-embed-text:latest
OLLAMA_BASE_URL=http://ollama:11434
AI_TIMEOUT=120
MAX_RESPONSE_LENGTH=2000
AI_CONTEXT_WINDOW=4000
SHOW_PROMPT=true

# === Vector Database Configuration ===
VECTOR_DB=qdrant
QDRANT_URL=http://qdrant:6333

# === Knowledge Base Configuration ===
DEFAULT_CHUNK_SIZE=1000
DEFAULT_COLLECTION_NAME=knowledge_base
MAX_FILE_SIZE_MB=10

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# === Frontend Configuration ===
FRONTEND_URL=http://localhost:8501
BACKEND_URL=http://backend:8000

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE=/app/logs/docsmait.log

# === File System Configuration ===
TEMP_DIR=/tmp
LOG_DIR=/app/logs
CONFIG_DIR=/app/config
BACKUP_DIR=/tmp/docsmait_backup
RESTORE_DIR=/tmp/docsmait_restore

# === UI Configuration ===
TEXTAREA_SMALL_HEIGHT=80
TEXTAREA_MEDIUM_HEIGHT=100
TEXTAREA_LARGE_HEIGHT=150
EDITOR_HEIGHT=400
DEFAULT_PAGE_SIZE=25
MAX_PREVIEW_LENGTH=1000

# === Timeout Configuration ===
AI_REQUEST_TIMEOUT=180
API_REQUEST_TIMEOUT=30
DEFAULT_REQUEST_TIMEOUT=10

# === Numeric Input Ranges ===
SEVERITY_RATING_MIN=1
SEVERITY_RATING_MAX=10
OCCURRENCE_RATING_MIN=1
OCCURRENCE_RATING_MAX=10
DETECTION_RATING_MIN=1
DETECTION_RATING_MAX=10

# === Company Information ===
COMPANY_NAME=Docsmait
COMPANY_WEBSITE=https://coherentix.com/
SUPPORT_EMAIL=support@docsmait.com

# === Performance Configuration ===
THREAD_JOIN_TIMEOUT=30
SEARCH_LIMIT_MIN=3

# === User Management Configuration ===
MIN_PASSWORD_LENGTH=8
PASSWORD_COMPLEXITY_REQUIRED=false
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5

# === Training System Configuration ===
TRAINING_PASS_PERCENTAGE=80
DEFAULT_ASSESSMENT_QUESTIONS=20
MIN_ASSESSMENT_QUESTIONS=5
MAX_ASSESSMENT_QUESTIONS=50

# === Export Configuration ===
DEFAULT_EXPORT_FORMAT=csv
EXPORT_BATCH_SIZE=1000
MAX_EXPORT_RECORDS=10000
EXPORT_TIMEOUT_SECONDS=300

# === Activity Logging Configuration ===
ACTIVITY_LOG_RETENTION_DAYS=365
LOG_IP_ADDRESSES=true
LOG_USER_AGENTS=true
ACTIVITY_LOG_BATCH_SIZE=1000

# === Usage Tracking Configuration ===
TRACK_USAGE=true
TRACK_FEEDBACK=true
LOG_PROMPTS=true
USAGE_RETENTION_DAYS=90

# === RAG Configuration ===
RAG_SIMILARITY_SEARCH_LIMIT=5
RAG_MIN_CHUNK_LENGTH=50

# === Design Record Configuration ===
REQUIREMENT_ID_PREFIX=REQ
HAZARD_ID_PREFIX=HAZ

# === Records Management Configuration ===
SUPPLIER_ID_PREFIX=SUP
PART_NUMBER_PREFIX=PRT
EQUIPMENT_ID_PREFIX=EQP
COMPLAINT_ID_PREFIX=COMP
NC_ID_PREFIX=NC
DEFAULT_CALIBRATION_FREQUENCY_DAYS=365