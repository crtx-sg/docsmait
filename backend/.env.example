# backend/.env.example
# Example environment variables for DocsMait

# === Authentication Configuration ===
JWT_SECRET_KEY="your-secret-key-change-in-production"

# === AI/LLM Configuration ===
GENERAL_PURPOSE_LLM="gemma:2b"
DEFAULT_EMBEDDING_MODEL="nomic-embed-text"
DEFAULT_CHAT_MODEL="llama3.1"
OLLAMA_BASE_URL="http://ollama:11434"
AI_TIMEOUT=120
MAX_RESPONSE_LENGTH=2000
AI_CONTEXT_WINDOW=4000
SHOW_PROMPT=true

# === Available Models (optional - defaults provided) ===
MODEL_1="qwen2:7b"
MODEL_2="llama3:latest"
MODEL_3="gemma:7b"
MODEL_4="mistral:latest"
MODEL_5="codellama:7b"

# === Vector Database Configuration ===
QDRANT_URL="http://qdrant:6333"

# === Database Configuration ===
DATABASE_URL="postgresql://docsmait_user:docsmait_password@docsmait_postgres:5432/docsmait"

# === Knowledge Base Configuration ===
DEFAULT_COLLECTION_NAME="knowledge_base"
DEFAULT_CHUNK_SIZE=1000
EMBEDDING_DIMENSIONS=768
MAX_FILE_SIZE_MB=10

# === RAG Configuration ===
RAG_SIMILARITY_SEARCH_LIMIT=5
RAG_MIN_CHUNK_LENGTH=50

# === Usage Tracking Configuration ===
TRACK_USAGE=true
TRACK_FEEDBACK=true
LOG_PROMPTS=true
USAGE_RETENTION_DAYS=90

# === API Configuration ===
API_HOST="0.0.0.0"
API_PORT=8000

# === Frontend Configuration ===
BACKEND_URL="http://backend:8000"
FRONTEND_URL="http://localhost:8501"
